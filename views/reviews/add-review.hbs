<main class="container">
    <h3>AÃ±adir Review</h3>

    <form action="/reviews/review-create" method="POST">
        <div>
            <label for="title" class="form-label">Review Title</label>
            <input class="form-control" name="title" id="title" type="text">
        </div>
        <div>
            <label for="description" class="form-label">Description</label>
            <textarea class="form-control" name="description" type="text" rows="2"></textarea>
        </div>
        <div>
            <label for="rating" class="form-label">Rating</label>
            <input class="form-control" name="rating" type="number">
        </div>
        <div>
            <label for="comic" class="form-label">Comic</label> 
            <select name="comic" class="form-control" id="comic">
                <option>Select</option>
                {{#each comics}}
                    <option value="{{id}}">{{name}}</option>
                {{/each}}
            </select> 
        </div>
        <button class="btn btn-dark mt-3" type="submit">Add review</button>
    </form>
</main>