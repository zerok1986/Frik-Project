<div class="container index">

  <h1>🦸 {{siteTitle}} 🦸‍♀️</h1>

  <div class="slogan-box">
    <p class="slogan">Track comics you’ve read.</p>
    <p class="slogan">Save those you want to.</p>
    <p class="slogan">Tell your friends what’s good!</p>
  </div>

  <div class="buttons-box">
    <a href="/registro" class="btn btn-dark index-btn" type="button">Sign up</a>
    <a href="/iniciar-sesion" class="btn btn-dark index-btn" type="button">Log in</a>
  </div>

  {{#if loginMsg}}
  <p id="logoutMessage">{{loginMsg}}</p>
  {{/if}}

  {{#if logoutMsg}}
  <p id="logoutMessage">{{logoutMsg}}</p>
  {{/if}}

</div>
