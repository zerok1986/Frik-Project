<main class="container">
    <h3>Edit Review</h3>

    <form action="/reviews/review-edit/{{review.id}}" method="POST">
        <div>
            <label for="title" class="form-label">Review Title</label>    
            <input class="form-control" name="title" id="title" type="text" value="{{review.title}}">
        </div>
        <div>
            <label for="description" class="form-label">Description</label>
            <textarea class="form-control" name="description" type="text" value="{{review.description}}" rows="2"></textarea>
        </div>
        <div>
            <label for="rating" class="form-label">Rating</label>
            <input class="form-control" name="rating" type="number" value="{{review.rating}}">
        </div>
        <div>
            <label for="comic" class="form-label">Comic</label>    
            <select name="comic" class="form-control" id="comic" value="{{review.comic._id}}">
                <option value="{{review.comic._id}}">{{review.comic.name}}</option>
                {{#each thisUserComics.comics}}
                    <option value="{{_id}}">{{name}}</option>
                {{/each}}
            </select>
        </div>
        <button class="btn btn-dark mt-3" type="submit">Edit review</button>
    </form>
</main>