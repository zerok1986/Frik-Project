<main>
    <h3>Editar Review</h3>

    <form action="/reviews/review-edit/{{review.id}}" method="POST">
        <label for="title">
            Titulo de la Review
            <input name="title" id="title" type="text" value="{{review.title}}">
        </label>
        </br>

        <label for="description">
            Descripción <input name="description" type="text" value="{{review.description}}">
        </label>
        </br>

        <label for="rating">
            Puntuación <input name="rating" type="number" value="{{review.rating}}">
        </label>
        </br>

        <label for="comic">
            Comic de la review
            <select name="comic" class="form-control" id="comic" value="{{review.comic._id}}">
                <option value="{{review.comic._id}}">{{review.comic.name}}</option>
                {{#each thisUserComics.comics}}

                <option value="{{_id}}">{{name}}</option>

                {{/each}}
            </select>
        </label>

        <button type="submit">Edit review</button>
    </form>
</main>